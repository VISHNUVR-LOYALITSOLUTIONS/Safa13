<odoo>
    <data>
        <record id="view_margin_percentage_purchase_order_form" model="ir.ui.view">
            <field name="name">purchase.order.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/tree/field[@name='product_qty']" position="before">
                    <field name="mrp"/>
                    <field name="margin_percentage"/>
                </xpath>
                <xpath expr="//field[@name='order_line']/kanban/field[@name='product_qty']" position="before">
                    <field name="mrp"/>
                    <field name="margin_percentage"/>
                </xpath>
                <xpath expr="//field[@name='order_line']/kanban/templates//t[@t-if='!record.display_type.raw_value']"
                       position="inside">
                    <div class="row">
                        <div class="col-12 text-muted">
                            <span>
                                MRP:
                                <t t-esc="record.mrp.value"/>
                            </span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 text-muted">
                            <span>
                                Margin %:
                                <t t-esc="record.margin_percentage.value"/>
                            </span>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>