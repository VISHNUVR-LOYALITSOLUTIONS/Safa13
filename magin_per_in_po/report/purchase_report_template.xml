<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_purchaseorder_document_inherit" inherit_id="purchase.report_purchaseorder_document">

        <xpath expr="//thead/tr/th[@name='th_date_req']" position="replace">
            <th name="th_mrp"><strong>MRP</strong></th>
        </xpath>

        <xpath expr="//thead/tr/th[@name='th_quantity']" position="before">
            <th name="th_margin_per"><strong>Margin %</strong></th>
        </xpath>

        <xpath expr="//tbody/t/tr/t[@t-if='not line.display_type']/td[4]" position="replace">
            <td class="text-right">
                <span t-field="line.mrp"/>
            </td>
        </xpath>

        <xpath expr="//tbody/t/tr/t[@t-if='not line.display_type']/td[5]" position="before">
            <td class="text-center">
                <span t-field="line.margin_percentage"/>%
            </td>
        </xpath>
    </template>



</odoo>