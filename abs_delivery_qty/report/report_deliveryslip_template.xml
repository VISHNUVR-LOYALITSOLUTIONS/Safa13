<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_delivery_slip_document_inherit" inherit_id="stock.report_delivery_document">
        <xpath expr="//table[@name='stock_move_line_table']" position="after">
            <strong style="font-size: 11px;font-family:Arial;" >Total Quantity: </strong>
            <span t-field="o.total_delivered_qty"/>
        </xpath>

        <xpath expr="//table[@name='stock_move_table']/thead/tr/th[@name='th_sm_product']" position="before">
            <th name="th_sl_no"><strong>Sl No.</strong></th>
        </xpath>

        <xpath expr="//table[@name='stock_move_table']/tbody/tr/td" position="before">
            <td class="text-center">
                <t t-esc="move_index+1"/>
            </td>
        </xpath>

        <xpath expr="//table[@name='stock_move_line_table']/thead/tr/th[@name='th_sml_product']" position="before">
            <th name="th_sl_no"><strong>Sl No.</strong></th>
        </xpath>

        <xpath expr="//table[@name='stock_move_line_table']/tbody/tr/td" position="before">
            <td class="text-center">
                <t t-esc="move_line_index+1"/>
            </td>
        </xpath>
    </template>

</odoo>