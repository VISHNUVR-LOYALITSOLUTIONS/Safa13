<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_invoice_document_product_qty_inherit" inherit_id="account.report_invoice_document">
        <xpath expr="//table[@name='invoice_line_table']" position="after">
            <strong style="font-size: 11px;font-family:Arial;" >Total Quantity: </strong>
            <span t-field="o.total_invoiced_qty"/>
        </xpath>

        <xpath expr="//table[@name='invoice_line_table']/thead/tr/th[@name='th_description']" position="before">
            <th name="th_sl_no"><strong>Sl No.</strong></th>
        </xpath>

        <xpath expr="//td[@name='account_invoice_line_name']" position="before">
            <td class="text-center">
                <t t-esc="line_index+1"/>
            </td>
        </xpath>
    </template>

</odoo>