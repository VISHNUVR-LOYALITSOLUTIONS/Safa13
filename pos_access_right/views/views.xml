<odoo>
  <data>
    <record id="pos_res_users_form_view" model="ir.ui.view">
        <field name="name">res.users.form.view</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="priority" eval="32"/>
        <field name="arch" type="xml">
             <xpath expr="//notebook/page[1]" position="after">
                   <page string="Point Of Sale">
                    <group string="Point Of Sale Access">
<!--                        <label for="allow_discount" string="Allow discount"/>-->
                            <field name="allow_discount" string="Allow discount"/>
<!--                        <label for="allow_edit_price" string="Allow edit price" />-->
                            <field name="allow_edit_price" string="Allow edit price" />
<!--                        <label for="cash_discount" string="Allow cash discount"/>-->
                            <field name="cash_discount" string="Allow cash discount"/>
<!--                        <label for="pos_discount" string="Allow POS discount"/>-->
                            <field name="pos_discount" string="Allow POS discount"/>
                    </group>
                   </page>
            </xpath>
        </field>
</record>
  </data>
</odoo>