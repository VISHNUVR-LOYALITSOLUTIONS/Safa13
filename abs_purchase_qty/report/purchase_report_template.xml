<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_purchaseorder_document_inherit" inherit_id="purchase.report_purchaseorder_document">
        <xpath expr="//p[@t-field='o.notes']" position="before">
            <strong style="font-size: 11px;font-family:Arial;" >Total Quantity: </strong>
            <span t-field="o.total_purchase_quantity"/>
        </xpath>

        <xpath expr="//thead/tr/th[@name='th_description']" position="before">
            <th name="th_sl_no"><strong>Sl No.</strong></th>
        </xpath>

    </template>

    <template id="sl_no_purchaseorder_document_inherit" inherit_id="l10n_in_purchase.gst_report_purchaseorder_document_inherit">
        <xpath expr="//td" position="before">
            <td class="text-center">
                <t t-esc="line_index+1"/>
            </td>
        </xpath>
    </template>

</odoo>